{
  "pkg": [
    {
      "name": "brew",
      "flow": [
        {
          "cmd": "brew update",
          "re": ""
        },
        {
          "cmd": "brew outdated -v",
          "re": "(?m)^(?P<pkg>.*) \\((?P<current>.*)\\) < (?P<available>.*)$"
        }
      ]
    },
    {
      "name": "rbenv",
      "flow": [
        {
          "cmd": "rbenv versions",
          "re": "(?m)^.{2}(?P<current>(?P<pkg>[^\\n]*\\d+\\.\\d+)\\S+)"
        },
        {
          "cmd": "rbenv install --list",
          "re": "(?m)^(?P<available>(?P<pkg>[^\\n0-9]*\\d+\\.\\d+)\\S*)"
        }
      ]
    },
    {
      "name": "rust",
      "flow": [
        {
          "cmd": "rustup check",
          "re": "(?m)^(?P<pkg>.*) - .*: (?P<current>\\S+) .*(?:-> (?P<available>\\S+) )?"
        }
      ]
    },
    {
      "name": "nvm",
      "shell": "sh -lc",
      "flow": [
        {
          "cmd": "nvm ls --no-alias --no-colors",
          "re": "(?m)^[^v]*(?P<current>(?P<pkg>v\\d+)\\.\\d+\\.\\d+)"
        },
        {
          "cmd": "nvm ls-remote --no-colors",
          "re": "(?m)^[^v]*(?P<available>(?P<pkg>v\\d+)\\.\\d+\\.\\d+)"
        }
      ]
    }
  ]
}